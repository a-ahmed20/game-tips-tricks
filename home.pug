extends layout.pug

block content
  .container.mt-5
    .jumbotron.text-center
      h1.display-4 Welcome to Our App!
      p.lead Share game tips and connect with other players
      hr.my-4
      if user
        a.btn.btn-primary.btn-lg(href='/posts' role='button') View Game Tips
        | 
        a.btn.btn-success.btn-lg(href='/posts/create' role='button') Share a Tip
      else
        a.btn.btn-primary.btn-lg(href='/login' role='button') Login
        | 
        a.btn.btn-secondary.btn-lg(href='/signup' role='button') Sign Up