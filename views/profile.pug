extends layout.pug

block content
  .container.mt-4
  
    .row
      // Left Column - Profile Info
      .col-md-4.mb-4
        .card
          .card-body.text-center
            h3= user.username
            p.text-muted= user.email
            if user.location
              p
                i.bi.bi-geo-alt
                |  #{user.location}
            if user.website
              p
                i.bi.bi-globe
                |  
                a(href=user.website target="_blank")= user.website
            // Total XP Display - Added this section
            .xp-display
              .card.text-white.bg-secondary.mt-0.mb-0
                .card-body
                  h5 Total XP
                  p.display-5= user.xp_points || 0
                 
        .card.mt-3
          .card-header
            h5 Edit Profile
          .card-body
            form(method="POST" action="/profile/update")
              .mb-3
                label.form-label(for="bio") Bio
                textarea.form-control(
                  name="bio" 
                  rows="3"
                )= user.bio || ''
              .mb-3
                label.form-label(for="location") Location
                input.form-control(
                  type="text" 
                  name="location" 
                  value=user.location || ''
                )
              .mb-3
                label.form-label(for="website") Website
                input.form-control(
                  type="url" 
                  name="website" 
                  value=user.website || ''
                )
              button.btn.btn-primary(type="submit") Save Changes

      // Right Column - User Posts
      .col-md-8
        // Posts Section with XP
        .card.mb-4
          .card-header.d-flex.justify-content-between.align-items-center
            h4.mb-0 Your Posts
            a.btn.btn-sm.btn-success(href="/posts/")
              i.bi.bi-plus-lg
              |  New Post
          .card-body
            if posts && posts.length > 0
              each post in posts
                .card.mb-3
                  .card-body
                    .d-flex.justify-content-between.align-items-start
                      div
                        h5.card-title= post.title
                        p.card-text.mt-2= post.content
                      .text-end
                        span.badge.bg-success
                          i.bi.bi-star-fill
                          |  #{post.post_xp} XP
                    .d-flex.justify-content-between.align-items-center.mt-2
                      small.text-muted
                        | Posted on #{new Date(post.created_at).toLocaleString()}
                      form(method="POST" action=`/profile/posts/delete/${post.id}`)
                        button.btn.btn-sm.btn-danger(type="submit")
                          i.bi.bi-trash
            else
              .alert.alert-info
                | You haven't posted anything yet. 
                a.alert-link(href="/posts/") Create your first post!

        // Comments Section with XP
        .card
          .card-header
            h4 Your Comments
          .card-body
            if comments && comments.length > 0
              each comment in comments
                .card.mb-3
                  .card-body
                    .d-flex.justify-content-between.align-items-start
                      div
                        p.card-text= comment.content
                        small.text-muted
                          | On post: #{comment.post_title}
                      .text-end
                        span.badge(class=comment.comment_xp > 5 ? 'bg-success' : 'bg-secondary')
                          i.bi.bi-chat-left-text
                          |  #{comment.comment_xp} XP
                    .d-flex.justify-content-between.mt-2
                      small.text-muted
                        | #{comment.like_count} ğŸ‘ #{comment.dislike_count} ğŸ‘
                      small.text-muted
                        | #{new Date(comment.created_at).toLocaleString()}
            else
              .alert.alert-info No comments yet.

  link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css")