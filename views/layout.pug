doctype html
html
  head
    title Yacht club
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href='/') Yacht club
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav
            li.nav-item
              a.nav-link(href='/posts') Tips
            li.nav-item
              a.nav-link(href='/discussion') Discussion
            li.nav-item
              a.nav-link(href='/contactUs') Contact
          ul.navbar-nav.ms-auto
            if user
              li.nav-item
                a.nav-link(href='/posts/create')
                  i.bi.bi-plus-circle
                  span.ms-2 New Post
              li.nav-item
                a.nav-link(href='/profile')
                  i.bi.bi-person
                  span.ms-2 Profile
              li.nav-item
                a.nav-link(href='/logout')
                  i.bi.bi-box-arrow-right
                  span.ms-2 Logout
            else
              li.nav-item
                a.nav-link(href='/login')
                  i.bi.bi-box-arrow-in-right
                  span.ms-2 Login
              li.nav-item
                a.nav-link(href='/signup')
                  i.bi.bi-person-plus
                  span.ms-2 Sign Up

    .container.my-4
      if success
        .alert.alert-success.alert-dismissible.fade.show
          = success
          button.btn-close(type='button' data-bs-dismiss='alert')
      if error
        .alert.alert-danger.alert-dismissible.fade.show
          = error
          button.btn-close(type='button' data-bs-dismiss='alert')
      
      block content

    footer.bg-dark.text-white.mt-5
      .container.py-3
        .row
          .col-md-6
            h5 Yacht club
            p Share and discover the best gaming strategies
          .col-md-6.text-end
            p &copy; 2023 Yacht club. All rights reserved.

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
    script(src='/js/main.js')